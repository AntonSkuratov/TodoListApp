FROM mcr.microsoft.com/dotnet/aspnet:8.0-nanoserver-1809 AS base
WORKDIR /app
EXPOSE 8080
EXPOSE 8081

FROM mcr.microsoft.com/dotnet/sdk:8.0-nanoserver-1809 AS build
ARG BUILD_CONFIGURATION=Release
WORKDIR /src
COPY ["TodoListApp.Api/TodoListApp.Api.csproj", "TodoListApp.Api/"]
COPY ["TodoListApp.Core/TodoListApp.Core.csproj", "TodoListApp.Core/"]
COPY ["TodoListApp.Storage/TodoListApp.Storage.csproj", "TodoListApp.Storage/"]
RUN dotnet restore "./TodoListApp.Api/TodoListApp.Api.csproj"
COPY . .
WORKDIR "/src/TodoListApp.Api"
RUN dotnet build "./TodoListApp.Api.csproj" -c %BUILD_CONFIGURATION% -o /app/build

FROM build AS publish
ARG BUILD_CONFIGURATION=Release
RUN dotnet publish "./TodoListApp.Api.csproj" -c %BUILD_CONFIGURATION% -o /app/publish /p:UseAppHost=false

FROM base AS final
WORKDIR /app
COPY --from=publish /app/publish .
ENTRYPOINT ["dotnet", "TodoListApp.Api.dll"]